{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/$1.js"
    },
    {
      "src": "/api/game",
      "dest": "api/game.js"
    },
    {
      "src": "/api/leaderboard",
      "dest": "pages/api/leaderboard.js"
    },
    {
      "src": "/api/frame",
      "dest": "pages/api/frame.js"
    }
  ],
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/public/index.html"
    }
  ]
}
