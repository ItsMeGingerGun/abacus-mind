{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "pages/api/*.js",
      "use": "@vercel/edge"
    }
  ],
  "routes": [
    {
      "src": "/auth",
      "dest": "/api/auth.js"
    },
    {
      "src": "/game",
      "dest": "/api/game.js"
    }
  ],
  "env": {
    "FARCASTER_API_KEY": "@farcaster-api-key",
    "KV_URL": "@kv-url",
    "KV_REST_API_TOKEN": "@kv-rest-api-token"
  }
}
